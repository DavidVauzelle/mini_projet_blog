Sur le fichier updateTraitement.php :

$requete = $bdd->prepare("UPDATE articles SET nom=:nom, description_accueil=:descriptionAccueil, description_detail=:descriptionDetail, image_accueil=:imageAccueil, image_detail=:imageDetail, alt=:altImage WHERE id=$id");

// $bdd->exec($requete);

$requete->execute(array(":nom"=> $nom, ":descriptionAccueil"=> $descriptionAccueil, ":descriptionDetail"=> $descriptionDetail, ":imageAccueil"=> $imageAccueil, ":imageDetail"=> $imageDetail, ":altImage"=> $altImage,));
